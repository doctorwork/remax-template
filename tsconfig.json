{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": ".",
    "traceResolution": true,
    "paths": {
      "*": ["*"],
      "@/*": ["./src/*"],
      "remax/base": ["./node_modules/remax/wechat"]
    }
  }
}
